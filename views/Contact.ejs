<body>
    <%- include("partials/navbar.ejs") %>



        <div class="cc-container">
            <div class="cc-left">
                <h2>Send Me a message</h2>
                <form action="/send" method="post">
                    <div class="cc-top">
                        <label for="name">Name*</label>
                        <input type="text" placeholder="Your name" id="name" name="name">
                        <label for="Phone">Phone</label>
                        <input type="number" placeholder="Phone#" name="Phone" id="Phone">
                        <p>Message*</p>
                        <label for="message" style="color: black;">Write your message</label>
                        <input type="text" name="msg" id="message">

                    </div>
                    <div class="cc-bottom">

                        <label for="email" class="label">Email*</label>
                        <input type="email" placeholder="Your email" id="email" name="email">
                        <label for="company" class="label">Company</label>
                        <input type="text" placeholder="Company name" name="company" id="company">

                    </div>
                    <button>Send Message</button>

                </form>
            </div>
            <div class="cc-right">
                <div class="info">
                    <h3>Contact</h3>
